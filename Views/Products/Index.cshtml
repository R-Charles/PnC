@using ProductsAndCategories.Models
@model Product


<div class="container w-75 mx-auto">
    <div class="row">
        <div class="col">
            <h2 class="text-center">New Product</h2>

            @* <form href="dishes/create" method="POST"> *@
            <form class="shadow p-3 rounded" asp-controller="Products" asp-action="Create" method="POST">

                <div class="mb-3">
                    <label asp-for="Name"></label>
                    <span asp-validation-for="Name" class="text-danger font-weight-bold">
                    </span>
                    <input class="form-control" asp-for="Name">
                </div>

                <div class="mb-3">
                    <label asp-for="Price"></label>
                    <span asp-validation-for="Price" class="text-danger font-weight-bold">
                    </span>
                    <input class="form-control" asp-for="Price">
                </div>

                <div class="mb-3">
                    <label asp-for="Description"></label>
                    <span asp-validation-for="Description" class="text-danger font-weight-bold">
                    </span>
                    <input class="form-control" asp-for="Description">
                </div>
                <button class="btn btn-success">Create</button>
            </form>
        </div>

        <div class="col">
        <div class="right ps-5">
            <h2 class="mb-5">All Products</h2>
            <ul>
                @foreach (Product product in ViewBag.Products)
                {
                    <li><a href="/products/@product.ProductId">@product.Name</a></li>
                }
            </ul>
        </div>
        </div>
    </div>
</div>
